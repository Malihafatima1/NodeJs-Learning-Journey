<div 
  style="
    max-width:500px;
    margin:40px auto;
    padding:25px;
    border-radius:12px;
    background:#f8f9fa;
    box-shadow:0 4px 10px rgba(0,0,0,0.1);
    font-family:Arial;
  "
>
  <h1 style="text-align:center; margin-bottom:20px; color:#333;">
    Edit Student
  </h1>

  <form 
    action="/students/<%= student._id %>?_method=PUT" 
    method="post"
    style="display:flex; flex-direction:column; gap:15px;"
  >
    
    <input 
      type="text" 
      name="name"
      value="<%= student.name %>" 
      placeholder="Enter student name"
      required
      style="
        padding:12px;
        border:1px solid #ccc;
        border-radius:8px;
        font-size:16px;
      "
    />

    <input 
      type="text" 
      name="course"
      value="<%= student.course %>" 
      placeholder="Enter course"
      required
      style="
        padding:12px;
        border:1px solid #ccc;
        border-radius:8px;
        font-size:16px;
      "
    />

    <input 
      type="number"
      name="age"
      value="<%= student.age %>" 
      placeholder="Enter age"
      style="
        padding:12px;
        border:1px solid #ccc;
        border-radius:8px;
        font-size:16px;
      "
    />

    <button 
      type="submit"
      style="
        padding:12px;
        background:#4CAF50;
        color:white;
        font-size:16px;
        border:none;
        border-radius:8px;
        cursor:pointer;
        font-weight:bold;
        transition:0.3s;
      "
    >
      Update Student
    </button>
  </form>

  <div style="text-align:center; margin-top:20px;">
    <a 
      href="/students"
      style="
        color:#2196F3;
        text-decoration:none;
        font-size:16px;
        font-weight:bold;
      "
    >
      â† Back to All Students
    </a>
  </div>
</div>
